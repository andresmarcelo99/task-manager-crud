# Database
# Note: If you get "Unknown authentication plugin 'sha256_password'" error,
# you need to create a MySQL user with mysql_native_password authentication:
# CREATE USER 'your_user'@'localhost' IDENTIFIED WITH mysql_native_password BY 'your_password';
# GRANT ALL PRIVILEGES ON insight_crud.* TO 'your_user'@'localhost';
# FLUSH PRIVILEGES;
DATABASE_URL="mysql://username:password@localhost:3306/insight_crud?sslmode=prefer&connect_timeout=60"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION_TIME="3600s"

# AWS Cognito
AWS_COGNITO_USER_POOL_ID="your-user-pool-id"
AWS_COGNITO_CLIENT_ID="your-client-id"
AWS_COGNITO_REGION="us-east-1"

# Server
PORT=3001
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:5173"